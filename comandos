mkdir matcha        //Crear carpeta de matcha

cd matcha         //Cambiar a la carpeta de matcha

touch index.html   //Crear archivo index.html

git init          //Inicializar el repositorio de Git

git add .         //Añadir todos los archivos al repositorio

git commit -m "First commit"  //Hacer el primer commit

git status        //Este comando despliega si hay cambios
                  //antes del commit

git log      //Despliega los commits más recientes

git remote add origin --LINK DE TU REPO---  //Añade repositorio remoto de Github

git push origin master  //Sube los cambios al repositorio remoto